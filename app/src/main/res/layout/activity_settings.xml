<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appteve.quitsmok.SettingsActivity"
    android:background="@color/colorPrimaryDark">

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:bb_tabXmlResource="@xml/bottombar_tabs" >

    </com.roughike.bottombar.BottomBar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changeUserDataText"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:textColor="@color/center_bg"
                android:typeface="sans" />

            <Button
                android:text="Button"
                android:layout_height="wrap_content"
                android:id="@+id/changeBtn"
                android:layout_weight="0.5"
                android:layout_width="100dp"
                android:onClick="changeUserDatas"
                android:background="@drawable/layout_bg"
                android:textColor="@color/center_bg"
                android:typeface="sans" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userPointText"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:textColor="@color/center_bg"
                android:typeface="sans" />

            <Button
                android:text="Button"
                android:layout_height="wrap_content"
                android:id="@+id/pointBtn"
                android:layout_weight="0.5"
                android:layout_width="100dp"
                android:onClick="buyPoints"
                android:background="@drawable/layout_bg"
                android:textColor="@color/center_bg"
                android:typeface="sans"
                android:textColorHighlight="@color/center_bg" />
        </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/appAdText"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:textColor="@color/center_bg"
            android:typeface="sans" />

            <Button
                android:text="Button"
                android:layout_height="wrap_content"
                android:id="@+id/adButton"
                android:layout_weight="0.5"
                android:layout_width="100dp"
                android:onClick="removeAds"
                android:background="@drawable/layout_bg"
                android:typeface="sans"
                android:textColor="@color/center_bg" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp">

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/disclamer"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:textColor="@color/center_bg"
                android:typeface="sans" />

            <Button
                android:text="Button"
                android:layout_height="wrap_content"
                android:id="@+id/disclamerBtn"
                android:layout_weight="0.35"
                android:background="@drawable/layout_bg"
                android:layout_width="100dp"
                android:typeface="sans"
                android:textColor="@color/center_bg"
                android:onClick="disclamerText" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
