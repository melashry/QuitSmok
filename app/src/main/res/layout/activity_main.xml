<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appteve.quitsmok.MainActivity">

    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:bb_tabXmlResource="@xml/bottombar_tabs" >

    </com.roughike.bottombar.BottomBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    ads:srcCompat="@drawable/quit_smoking"
                    android:id="@+id/imageView8"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="129dp"
                android:background="@drawable/layout_bg"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="129dp">

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="32dp"
                        android:id="@+id/headerText"
                        android:textColor="@color/center_bg"
                        android:textSize="18sp"
                        android:typeface="sans" />

                    <TextView
                        android:text="01 D 22 H 33 M 22 S"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="60dp"
                        android:id="@+id/countText"
                        android:textColor="@color/center_bg"
                        android:textSize="30sp"
                        android:typeface="sans" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="155dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/layout_bg"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="16dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:layout_width="196dp"
                            android:fillViewport="true"

                            android:id="@+id/a1">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1">

                                <TextView
                                    android:text="TextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/cigNotSmokedText"

                                    android:textAlignment="center"
                                    android:layout_weight="0.7"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginTop="28dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentEnd="true"
                                    android:textColor="@color/center_bg"
                                    android:typeface="sans"
                                    android:textSize="20sp" />

                                <TextView
                                    android:text="TextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/notSmokCounter"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@color/center_bg"
                                    android:textSize="25sp"
                                    android:typeface="sans"
                                    android:layout_marginTop="10dp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:fillViewport="true"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:text="TextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/moneySawedText"
                                    android:layout_marginTop="28dp"
                                    android:textAlignment="center"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentEnd="true"
                                    android:textSize="20sp"
                                    android:textColor="@color/center_bg"
                                    android:typeface="sans" />

                                <TextView
                                    android:text="TextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/moneySavedCount"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@color/center_bg"
                                    android:typeface="sans"
                                    android:textSize="25sp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/ads">

                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    ads:adSize="BANNER"
                    ads:adUnitId="@string/banner_ad_unit_id">
                </com.google.android.gms.ads.AdView>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="239dp"
                android:background="@drawable/layout_bg"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="18dp"
                        android:id="@+id/header2"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentStart="true"
                        android:textAlignment="center"
                        android:textColor="@color/center_bg"
                        android:textSize="20sp"
                        android:typeface="sans" />

                    <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textGet1Week"
                    android:layout_below="@+id/header2"
                    android:layout_marginTop="15dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="center"
                    android:textColor="@color/center_bg"
                    android:textSize="16sp"
                        android:typeface="sans" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textGet1Month"
                        android:layout_below="@+id/textGet1Week"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:textAlignment="center"
                        android:textColor="@color/center_bg"
                        android:textSize="16sp"
                        android:typeface="sans" />
                    <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textGet1Year"
                    android:layout_below="@+id/textGet1Month"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="center"
                    android:textColor="@color/center_bg"
                    android:textSize="16sp"
                        android:typeface="sans" />
                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textGet5Year"
                        android:layout_below="@+id/textGet1Year"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:textAlignment="center"
                        android:textColor="@color/center_bg"
                        android:textSize="16sp"
                        android:typeface="sans" />
                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textGet10Year"
                        android:layout_below="@+id/textGet5Year"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:textAlignment="center"
                        android:textColor="@color/center_bg"
                        android:textSize="16sp"
                        android:typeface="sans" />
                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textGet20Year"
                        android:layout_below="@+id/textGet10Year"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:textAlignment="center"
                        android:textColor="@color/center_bg"
                        android:textSize="16sp"
                        android:typeface="sans" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:background="@drawable/layout_bg"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:layout_width="196dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1">

                                <TextView
                                    android:text="TextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/lifeLostTextHeader"

                                    android:textAlignment="center"
                                    android:layout_weight="1"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginTop="28dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentEnd="true"
                                    android:textColor="@color/center_bg"
                                    android:textSize="17sp"
                                    android:typeface="sans" />

                                <TextView
                                    android:text="TextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/lifeLostCounter"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@color/center_bg"
                                    android:textSize="20sp"
                                    android:typeface="sans" />

                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    ads:srcCompat="@drawable/sad"
                                    android:layout_below="@+id/lifeLostCounter"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/imageView6" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <TextView
                                    android:text="TextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/smockedTextHeader"
                                    android:layout_marginTop="28dp"
                                    android:textAlignment="center"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentEnd="true"
                                    android:textColor="@color/center_bg"
                                    android:textSize="17sp"
                                    android:typeface="sans" />

                                <TextView
                                    android:text="TextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/smokedCounterz"
                                    android:layout_centerVertical="true"
                                    android:layout_centerHorizontal="true"
                                    android:textColor="@color/center_bg"
                                    android:textSize="20sp"
                                    android:typeface="sans" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    ads:srcCompat="@drawable/smoking_sign"
                                    android:layout_below="@+id/smokedCounterz"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="10dp"
                                    android:id="@+id/imageView7"
                                    android:layout_marginBottom="10dp" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/layout_bg"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/moneyWastedHeader"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/center_bg"
                        android:textSize="23sp"
                        android:textAlignment="center"
                        android:typeface="sans" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/moneyWastedCounter"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/center_bg"
                        android:textAlignment="center"
                        android:textSize="20sp"
                        android:layout_below="@+id/moneyWastedHeader"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:typeface="sans" />

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="2dp"
                        android:id="@+id/imageView8e"
                        android:layout_below="@+id/moneyWastedCounter"
                        android:layout_centerHorizontal="true"
                        app:srcCompat="@drawable/piggy_bank" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp"></LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
