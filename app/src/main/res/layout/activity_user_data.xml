<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_data"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appteve.quitsmok.UserDataActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:id="@+id/userEndDataText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/center_bg"
        android:textAlignment="center" />

    <Button
        android:text="Button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userEndDataText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/dateBtn"
        android:background="@drawable/layout_bg"
        android:textColor="@color/center_bg"
        android:onClick="changeDataEnd" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/cigPerDayText"
        android:textColor="@color/center_bg"
        android:layout_below="@+id/dateBtn"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />

    <pl.polak.clicknumberpicker.ClickNumberPickerView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:picker_corner_radius="10"
        app:pickers_background_color="@color/colorAccent"
        app:swipe_enabled="false"
        app:value_background_color="@color/colorPrimary"
        app:value_text_color="@android:color/white"
        android:id="@+id/clickpikerCigPerDay"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/cigPerDayText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clickpikerCigPerDay"
        android:layout_alignStart="@+id/cigPerDayText"
        android:layout_marginTop="12dp"
        android:id="@+id/cigInPackText"
        android:textColor="@color/center_bg"
        android:textAlignment="center" />

    <pl.polak.clicknumberpicker.ClickNumberPickerView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:picker_corner_radius="10"
        app:pickers_background_color="@color/colorAccent"
        app:swipe_enabled="false"
        app:value_background_color="@color/colorPrimary"
        app:value_text_color="@android:color/white"
        android:id="@+id/clickpikerCigInPack"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/cigInPackText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clickpikerCigInPack"
        android:layout_alignEnd="@+id/cigInPackText"
        android:layout_marginTop="12dp"
        android:id="@+id/pricePackText"
        android:textColor="@color/center_bg"
        android:textAlignment="center" />

    <pl.polak.clicknumberpicker.ClickNumberPickerView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:picker_corner_radius="10"
        app:pickers_background_color="@color/colorAccent"
        app:swipe_enabled="false"
        app:value_background_color="@color/colorPrimary"
        app:value_text_color="@android:color/white"
        android:id="@+id/clickpikerPrice"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/pricePackText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clickpikerPrice"
        android:layout_marginTop="12dp"
        android:id="@+id/yearsSmokText"
        android:textColor="@color/center_bg"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <pl.polak.clicknumberpicker.ClickNumberPickerView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:picker_corner_radius="10"
        app:pickers_background_color="@color/colorAccent"
        app:swipe_enabled="false"
        app:value_background_color="@color/colorPrimary"
        app:value_text_color="@android:color/white"
        android:id="@+id/clickpikerYears"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/yearsSmokText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/clickpikerYears"
        android:layout_marginTop="12dp"
        android:id="@+id/currencyText"
        android:textColor="@color/center_bg"
        android:textAlignment="center"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        android:id="@+id/currencyBtn"
        android:layout_below="@+id/currencyText"
        android:layout_centerHorizontal="true"
        android:textColor="@color/center_bg"
        android:background="@drawable/layout_bg"
        android:onClick="changeCurrency" />

</RelativeLayout>
