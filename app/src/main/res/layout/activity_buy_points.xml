<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_buy_points"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.appteve.quitsmok.BuyPointsActivity"
    android:background="@color/colorPrimaryDark">

    <Button
        android:text="Button"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="163dp"
        android:id="@+id/buy10pointsBtn"
        android:background="@drawable/layout_bg"
        android:textColor="@color/center_bg"
        android:layout_width="200dp"
        android:onClick="buy10Points" />

    <Button
        android:text="Button"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buy10pointsBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/buy20pointsBtn"
        android:background="@drawable/layout_bg"
        android:textColor="@color/center_bg"
        android:layout_width="200dp"
        android:onClick="buy20Points" />

    <Button
        android:text="Button"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buy20pointsBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:id="@+id/buy40pointsBtn"
        android:textColor="@color/center_bg"
        android:background="@drawable/layout_bg"
        android:layout_width="200dp"
        android:onClick="buy40Points" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:id="@+id/userPOintsText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/center_bg"
        android:textAlignment="center"
        android:typeface="sans"
        android:textSize="20sp" />
</RelativeLayout>
